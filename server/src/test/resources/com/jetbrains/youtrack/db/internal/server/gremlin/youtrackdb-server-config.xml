<youtrackdb-server>
  <handlers>
    <handler class="com.jetbrains.youtrack.db.internal.server.plugin.gremlin.GremlinServerPlugin">
      <parameters>
        <parameter name="config"
          value="classpath:com/jetbrains/youtrack/db/internal/server/gremlin/gremlin-server.yaml"/>
      </parameters>
    </handler>
  </handlers>
  <network>
    <sockets>
      <socket
        implementation="com.jetbrains.youtrack.db.internal.server.network.ServerTLSSocketFactory"
        name="ssl">
        <parameters>
          <parameter value="false" name="network.ssl.clientAuth"/>
          <parameter value="config/cert/youtrackdb.ks" name="network.ssl.keyStore"/>
          <parameter value="password" name="network.ssl.keyStorePassword"/>
          <parameter value="config/cert/youtrackdb.ks" name="network.ssl.trustStore"/>
          <parameter value="password" name="network.ssl.trustStorePassword"/>
        </parameters>
      </socket>
      <socket
        implementation="com.jetbrains.youtrack.db.internal.server.network.ServerTLSSocketFactory"
        name="https">
        <parameters>
          <parameter value="false" name="network.ssl.clientAuth"/>
          <parameter value="config/cert/youtrackdb.ks" name="network.ssl.keyStore"/>
          <parameter value="password" name="network.ssl.keyStorePassword"/>
          <parameter value="config/cert/youtrackdb.ks" name="network.ssl.trustStore"/>
          <parameter value="password" name="network.ssl.trustStorePassword"/>
        </parameters>
      </socket>
    </sockets>
    <protocols>
      <protocol name="binary"
        implementation="com.jetbrains.youtrack.db.internal.server.network.protocol.binary.NetworkProtocolBinary"/>
    </protocols>
    <listeners>
      <listener protocol="binary" ip-address="0.0.0.0" port-range="2424-2430" socket="default"/>
    </listeners>
    <collection>
    </collection>
  </network>
  <storages>
  </storages>
  <users>
    <user resources="*" password="root" name="root"/>
    <user resources="connect,server.listDatabases" password="guest" name="guest"/>
  </users>
  <properties>
    <entry name="profiler.enabled" value="false"/>
  </properties>
</youtrackdb-server>
