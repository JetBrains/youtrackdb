# LDBC SNB Driver Configuration

# YouTrackDB Gremlin/TinkerPop driver adapter settings
tinkerpop.vendor=ytdb
tinkerpop.ic13.maxHops=4
tinkerpop.ic14.maxHops=4
ytdb.port={{ db_port }}
ytdb.database={{ db_name }}
ytdb.username={{ db_user }}
ytdb.password={{ db_password }}

# Mode
mode={{ mode }}
{% if mode == "validate_database" and validation_file %}
validate_database={{ validation_file }}
{% endif %}

# Driver settings
workload=org.ldbcouncil.snb.driver.workloads.interactive.LdbcSnbInteractiveWorkload
db=com.youtrackdb.ldbc.runner.TinkerPopDb
name=LDBC-SNB
status=1
time_unit=MICROSECONDS

# TCR controls how fast operations are scheduled relative to their original timestamps.
# They ("original timestamps") come from LDBC Datagen (the data generator which simulates ~3 years of social network activity).
time_compression_ratio={{ time_compression_ratio }}

# When true:
# * Operations run back-to-back - no waiting between them
# * TCR becomes meaningless - there's no schedule to compress
# * Schedule audit is skipped
# Max out the database
ignore_scheduled_start_times={{ ignore_scheduled_start_times }}

spinner_wait_duration=1
help=false
workload_statistics=false
results_dir={{ results_dir }}
thread_count={{ thread_count }}
operation_count={{ operation_count }}
warmup={{ warmup }}

# Workload parameters
ldbc.snb.interactive.short_read_dissipation=0.2
ldbc.snb.interactive.scale_factor={{ scale_factor }}

# Data paths
ldbc.snb.interactive.parameters_dir={{ params_path }}
ldbc.snb.interactive.updates_dir={{ updates_path }}

